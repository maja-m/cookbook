<!-- views/create.handlebars -->
{{#if user}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Add new recipe</h3>
    </div>
    <div class="panel-body">
      <form class="form-horizontal">
        <div class="form-group">
          <label for="newTitle" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-10">
            <input type="text" id="newTitle" class="form-control" placeholder="Enter title" />
          </div>
        </div>
        <div class="form-group">
          <label for="newPicture" class="col-sm-2 control-label">Picture</label>
          <div class="col-sm-10">
            <input type="text" id="newPicture" class="form-control" placeholder="Enter main picture's URI" />
          </div>
        </div>
        <div id="newContent" class="summernote"></div>
        <button id="saveNew" class="btn btn-primary btn-lg pull-right" onclick="saveNew()" type="button" style="margin-left: 10px;"><span class="glyphicon glyphicon-ok" style="padding-right: 0.5em"></span>Save</button>
        <a class="btn btn-primary btn-lg pull-right" href="/"><span class="glyphicon glyphicon-remove"></span>Cancel</a>
      </form>
    </div>
  </div>
{{else}}
  <div class="jumbotron" style="text-align: center">
    <h1>Welcome to your cookbook</h1>
    <p>Sign in to view your profile!</p>
    <p>
      <a href="/signin" class="btn btn-default btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Go to the login page
      </a>
    </p>
  </div>
{{/if}}
