<!-- views/home.handlebars -->
<div class="jumbotron">
  <h1>
    <a class="header" href="/user/{{owner.username}}">
      <div>
        <img class="main-avatar"  width="90" height="90" src="/uploads/{{owner.avatar}}"/>
        {{owner.username}}'s cookbook
      </div>
    </a>
  </h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    {{#ifLoggedUser user.username owner.username}}
      <div class="pull-right">
        <button id="edit" class="btn btn-primary" onclick="edit()" type="button"><span class="glyphicon glyphicon-pencil"></span>Edit</button>
        <button id="save" class="btn btn-primary" onclick="save()" type="button" style="display:none;"><span class="glyphicon glyphicon-ok"></span>Save</button>
        <button id="cancel" class="btn btn-primary" onclick="cancel()" type="button" style="display:none;"><span class="glyphicon glyphicon-remove"></span>Cancel</button>
        <button id="deleteRecipe" class="btn btn-primary" onclick="deleteRecipe()" type="button"><span class="glyphicon glyphicon-trash"></span>Delete</button>
      </div>
    {{/ifLoggedUser}}
    <h1 id="title">{{recipe.title}}</h1>
    {{#if recipe.domain}}
      <h4 id="domain">Source: {{recipe.domain}}</h4>
    {{/if}}
    <div style="margin-top: 1.5em;">
      <input id="stars" {{#if recipe.stars}}value="{{recipe.stars}}" {{/if}} />
    </div>
    <div style="margin-top: 1.5em;">
      <label for="tags" id="tags-label" class="control-label">Tags: </label>
      <input id="tags" data-role="tagsinput"/>
    </div>
    <div style="position:relative; margin-top:1.5em;">
      <div id="content" class="click2edit" data-id="{{id}}">{{{recipe.content}}}</div>
    </div>
</div>
<div id="disqus_thread"></div>
  <script>
    (function() {
      var d = document, s = d.createElement('script');
      s.src = '//cookbook-3.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
</div>
