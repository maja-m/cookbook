<!-- views/home.handlebars -->
<div class="jumbotron">
  <h1><a href="/">{{owner.username}}'s cookbook</a></h1>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Profile Information</h3>
  </div>
  <div class="panel-body">
    <p>Username: {{owner.username}}</p>
    <p>Avatar: <img src="{{owner.avatar}}"/></p>
    Recipes:
    <ul id = "recipesList" class="recipesList">
      {{#each owner.recipes}}
        <a href="/user/{{../owner.username}}/recipe/{{@key}}"><li id={{url}} >{{title}}</li></a>
      {{/each}}
    </ul>
    {{#ifLoggedUser user.username owner.username}}
      <button id="edit" class="btn btn-primary" onclick="edit()" type="button">Edit</button>
      <button id="save" class="btn btn-primary" onclick="save()" type="button" style="display:none;">Save</button>
      <button id="deleteRecipe" class="btn btn-primary" onclick="deleteRecipe()" type="button">Delete</button>
    {{/ifLoggedUser}}
    <h2 id="title">{{recipe.title}}</h2>
    {{#if recipe.domain}}
      <h4 id="domain">Source: {{recipe.domain}}</h4>
    {{/if}}
    <div style="position:relative;">
      <div id="content" class="click2edit" data-id="{{id}}">{{{recipe.content}}}</div>
    </div>
  </div>

